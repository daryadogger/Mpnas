extends layouts/layout
include components/header
include components/footer
include components/desk-menu
include components/mob-menu
include components/menu

block title
  | Страница каталога

block header
  +header()

block main
  main
  .intro.mb-90.pt-5.pb-5 
    .container 
      ul.list.breadcrumbs.d-none.d-md-flex.mb-5
          li.breadcrumbs__item
            a.breadcrumbs__link(href="main.html")
              span.breadcrumbs__span Главная
              span.breadcrumbs__arrow
                svg(width="8" height="8")
                  use(xlink:href="img/sprite/sprite.svg#icon-arrow")
          li.breadcrumbs__item
            a.breadcrumbs__link(href="#")
              span.breadcrumbs__span Каталог
              span.breadcrumbs__arrow 
                svg(width="8" height="8")
                  use(xlink:href="img/sprite/sprite.svg#icon-arrow")
          li.breadcrumbs__item
            a.breadcrumbs__link(href="#")
              span.breadcrumbs__span Витамины и БАДы
              span.breadcrumbs__arrow 
                svg(width="8" height="8")
                  use(xlink:href="img/sprite/sprite.svg#icon-arrow")
          li.breadcrumbs__item
            a.breadcrumbs__link.breadcrumbs__link--current Витамины

      h2.fw-600.mb-2 Витамины

  .mb-90 
    .container
      .d-flex.justify-content-sm-between.flex-column.flex-sm-row.mb-4.mb-lg-5
        form.d-flex(method="GET" action="/")
          .d-flex
            p.mb-3.mb-sm-0.pr-3.w-lg-auto Сортировка:
            select(name="sort")
              option(value="Сначала популярные") Сначала популярные
              option(value="Сначала популярные") Сначала популярные
              option(value="Сначала популярные") Сначала популярные

          .d-flex 
            label.visually-hidden-input.checkbox
              input(type="checkbox" value="В наличии" name="В наличии")
              span.checkbox__span
              span.checkbox__text В наличии

            label.visually-hidden-input.checkbox
              input(type="checkbox" value="По акции" name="По акции")
              span.checkbox__span
              span.checkbox__text По акции


        .align-items-center.d-none.d-lg-flex
          a.link.link-view.js-link-view.active.mr-4(href="#")
            svg(width="25" height="25")
              use(xlink:href="img/sprite/sprite.svg#icon-col")
          a.link.link-view.js-link-view(href="#")
            svg(width="27" height="25")
              use(xlink:href="img/sprite/sprite.svg#icon-row")

      .row 
        .col-lg-3.mb-5.mb-lg-0
          a.js-filter-btn.btn.btn--green.d-lg-none(href="#") Фильтр

          .filter.js-filter
            button.btn.btn-close.js-close-filter.d-lg-none(type="button" title="Закрыть фильтр" aria-label="Закрыть фильтр")

            .filter__part.mb-4.p-4
              p.fw-600.fs-20.color-green Витамины
              ul.list
                li 
                  a.link.d-block.pb-3(href="#") Витамины 
                li 
                  a.link.d-block.pb-3(href="#") БАДы для женщин
                li 
                  a.link.d-block.pb-3(href="#") БАДы для мужчин
                li 
                  a.link.d-block.pb-3(href="#") Гематоген, батончики
                li 
                  a.link.d-block.pb-3(href="#") Фиточаи
              
              a.link.link--green.d-block.fw-600(href="#") Еще 13 категорий

            .filter__part.p-4
              form(method="POST" action="/")

        .col-lg-9
          .catalog-content.js-catalog-content.catalog-content--row
            .row.mb-5
              .col-sm-6.col-md-4.mb-4.d-flex.catalog-content__item

            .text-center  
              svg.loader(width="38" height="38")
                use(xlink:href="img/sprite/sprite.svg#icon-loader")


block footer
  +footer()

  .shade Ваши данные отправлены

  .shade.shade--info.js-info Реализация осуществляется только по рецепту врача

  a.btn-up(href="#" aria-label="Наверх" id="upbutton")
    svg(width="22" height="25")
      use(xlink:href="img/sprite/sprite.svg#icon-arrow")

block modal
  +menu()
  +desk-menu()
  +mob-menu()
